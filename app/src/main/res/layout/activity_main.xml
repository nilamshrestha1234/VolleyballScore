<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6BF7C"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:text="Volley Ball Score"
        android:textColor="#673AB7"
        android:textSize="40dp"

        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Team A"
                android:textColor="#CDDC39"

                android:textSize="40dp" />

            <TextView
                android:id="@+id/tvscoreA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="0"
                android:textSize="60dp"

                />

            <Button
                android:id="@+id/btnscoreA1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Point +1"

                />

            <Button
                android:id="@+id/btnscoreA2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="point +2"

                />

            <Button
                android:id="@+id/btnscoreA3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="point +3" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Team B"
                android:textColor="#CDDC39"

                android:textSize="40dp" />

            <TextView
                android:id="@+id/tvscoreB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="0"
                android:textSize="60dp"

                />

            <Button
                android:id="@+id/btnscoreB1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Point +1"

                />

            <Button
                android:id="@+id/btnscoreB2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="point +2"

                />

            <Button
                android:id="@+id/btnscoreB3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="point +3" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#8BC34A"
        android:text="Reset"
        android:textColorLink="#4CAF50" />

</LinearLayout>